<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="387.392" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="49" Margin="170,31,0,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" TextAlignment="Center" Width="614"/>
        <Button x:Name="btConnectDisc" Content="Подлючиться" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="155" Height="49" Click="Button_Click"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Margin="10,0,0,122.6" Width="774" Height="126" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TbMessage" HorizontalAlignment="Left" Margin="10,0,0,9.6" TextWrapping="Wrap" Text="Введите сообщение" Width="613" Height="88" VerticalAlignment="Bottom"/>
        <Button Content="Отправить" x:Name="btSend" HorizontalAlignment="Left" Margin="628,277,0,0" VerticalAlignment="Top" Width="155" Height="49" Click="btSend_Click"/>

    </Grid>
</Window>
